                                        <%= new Date(client.createdAt).toLocaleDateString('ar-SA') %>
                                    </div>
                                </div>

                                <div class="detail-item">
                                    <div class="detail-label">آخر تحديث</div>
                                    <div class="detail-value">
                                        <%= new Date(client.updatedAt).toLocaleDateString('ar-SA') %>
                                    </div>
                                </div>

                                <% if (client.notes) { %>
                                <div class="detail-item">
                                    <div class="detail-label">الملاحظات</div>
                                    <div class="detail-value">
                                        <%= client.notes %>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Statistics -->
                    <div class="col-md-8">
                        <div class="invoice-summary-card">
                            <h5 class="mb-4 text-center">ملخص الفواتير</h5>
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="summary-item">
                                        <div class="summary-number"><%= stats.totalInvoices %></div>
                                        <div class="summary-label">إجمالي الفواتير</div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="summary-item">
                                        <div class="summary-number"><%= stats.totalAmount.toLocaleString('ar-SA') %></div>
                                        <div class="summary-label">إجمالي المبلغ (جنيه)</div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="summary-item">
                                        <div class="summary-number"><%= stats.completedInvoices %></div>
                                        <div class="summary-label">فواتير مكتملة</div>
