                                        <div class="summary-number"><%= stats.pendingInvoices %></div>
                                        <div class="summary-label">فواتير معلقة</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Invoices -->
