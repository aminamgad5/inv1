                        <li class="nav-item">
                            <a class="nav-link" href="/companies">
                                <i class="fas fa-building ms-2"></i>
                                الشركات
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/files">
                                <i class="fas fa-folder ms-2"></i>
                                الملفات
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/invoices">
                                <i class="fas fa-file-invoice ms-2"></i>
                                الفواتير
                            </a>
                        </li>
                        
